<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App"/>

    <style name="App.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_booder</item>
        <item name="android:textColor">@color/colorBtnStart</item>
        <item name="android:textSize">16sp</item>
        <item name="android:height">48dp</item>
        <item name="android:width">0dp</item>
        <item name="android:radius">2dp</item>
    </style>

</resources>
