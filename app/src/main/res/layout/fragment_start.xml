<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:scaleType="center"
        android:src="@drawable/background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="0dp" />


    <android.support.design.widget.FloatingActionButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="@id/guide_right"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@id/guide_left"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/colorPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="PHAN MINH NGUYEN"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/guide_right"
        app:layout_constraintLeft_toLeftOf="@+id/guide_left"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp"
        android:id="@+id/guide_left"
        />

    <android.support.v7.widget.AppCompatButton
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        style="@style/App.Button"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="@string/btn_map"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guide_left"
        app:layout_constraintRight_toRightOf="@+id/guide_right"
        app:layout_constraintTop_toTopOf="@+id/guide_mid"
        android:drawableStart="@drawable/ic_search_black_24dp" />

    <android.support.v7.widget.AppCompatButton
        style="@style/App.Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:drawableLeft="@drawable/ic_room_black_24dp"
        android:drawableStart="@drawable/ic_room_black_24dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/btn_position"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/guide_left"
        app:layout_constraintRight_toRightOf="@+id/guide_right"
        app:layout_constraintTop_toTopOf="@+id/guide_mid" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp"
        android:id="@+id/guide_right"
        />

    <android.support.constraint.Guideline
        android:id="@+id/guide_mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent= "0.4"
        />

</android.support.constraint.ConstraintLayout>